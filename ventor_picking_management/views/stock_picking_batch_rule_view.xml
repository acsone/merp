<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- Views-->
        <record id='stock_picking_batch_rule_form' model='ir.ui.view'>
            <field name="name">Picking Rules</field>
            <field name="model">stock.picking.batch.rule</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <form string="Picking Rules">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="rule_action"/>
                            <field name="rule_criteria" widget="domain" options="{'model': 'stock.picking'}" />
                            <field name="rule_trigger"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Actions-->
        <record id='stock_picking_batch_rule_action' model='ir.actions.act_window'>
            <field name="name">Picking Rules</field>
            <field name="res_model">stock.picking.batch.rule</field>
            <field name="view_mode">tree,form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="stock_picking_batch_rule_form"/>
        </record>

        <!-- Menus -->
        <menuitem name="Picking Rules"
            id="stock_picking_batch_rule_menu"
            parent="ventor_base.ventor_app_base_menu"
            action="stock_picking_batch_rule_action"/>
    </data>

</odoo>
